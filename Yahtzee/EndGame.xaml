<dx:DXWindow
    x:Class="Yahtzee.EndGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    WindowStartupLocation="CenterScreen"
    Title="Yahtzee" Height="250" Width="300"
    Background="Crimson"
    Icon="Images/YahtzeeIcon.ico">

    <Grid Margin="10,10,10,10">
        <Border BorderBrush="White" BorderThickness="3" CornerRadius="3" Height="Auto" Margin="0,0,0,0" Padding="0,0,0,0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="EndText" Text="Would you like to play again?" TextWrapping="Wrap" TextAlignment="Center" Foreground="White" Height="Auto" FontWeight="Bold" FontSize="20" Width="169" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Width="Auto">
                    <Button x:Name="Restart" Content="Yes" Width="50" Height="30" Margin="0,0,10,20" HorizontalAlignment="Center" Click="Restart_Click"/>
                    <Button x:Name="CloseGame" Content="No" Width="50" Height="30" Margin="0,0,0,20" Click="CloseGame_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</dx:DXWindow>
